<div class="space"></div>

<div class="content">
  <h1>advertisement</h1>
  <%= link_to "NEW Ad", new_advertisement_path, class: "btn" %>
  <div class="space"></div>
  <% @ads.each do |ad| %>
    <p>id: <%= ad.id %></p>
    <div>
      <%= link_to (image_tag(ad.img_url)), ad.af_link %>
      <%= link_to '編集', edit_advertisement_path(ad.id), class: 'btn' %>
      <%= link_to '削除', advertisement_path(ad.id), method: :delete, data: { confirm: "削除しますか？" }, class: 'btn' %>
    </div>
  <% end %>
</div>

<div class="space"></div>