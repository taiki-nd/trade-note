<div class="content">
  <div class="container">
    <h1>登録情報の変更</h1>
    
    <%= form_with model: current_user, local: true do |f|%>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field">
        <%= f.label :name %> <br />
        <%= f.text_field :name, autofocus: true %>
      </div>
    
      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>
</div>